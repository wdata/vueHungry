border-1px($color)
  position: relative;
  &:after
    display: block;
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    width: 100%;
    height: 1px;
    background: $color;
    content: ' ';
  &:before
    display: block;
    position: absolute;
    top: -1px;
    left: 0;
    right: 0;
    width: 100%;
    height: 1px;
    background: $color;
    content: ' ';


bg-image($url)
  background-image: url("./image/" + $url + "@2x.png")
@media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
  background-image: url("./image/" + $url + "@3x.png")
